{% set isNameEmpty = config("Ceres.item.lists." ~ itemListId ~ "." ~ services.sessionStorage.getLang() ~ ".list_name") == 'DE name' or 
                     config("Ceres.item.lists." ~ itemListId ~ "." ~ services.sessionStorage.getLang() ~ ".list_name") == 'EN name' or 
                     config("Ceres.item.lists." ~ itemListId ~ "." ~ services.sessionStorage.getLang() ~ ".list_name") is empty %}

<p class="h3">
    {% if listType == "last_seen" %}
        {% if isNameEmpty %}
            {{ trans("Ceres::Template.itemListLastSeen") }}
        {% else %}
            {{ config("Ceres.item.lists." ~ itemListId ~ "." ~ services.sessionStorage.getLang() ~ ".list_name") }}
        {% endif %}
    {% elseif listType == "cross_selling" %}
        {% if isNameEmpty %}
            {{ trans("Ceres::Template.itemListX" ~ config("Ceres.item.lists.cross_selling_type")) }}
        {% else %}
            {{ config("Ceres.item.lists." ~ itemListId ~ "." ~ services.sessionStorage.getLang() ~ ".list_name") }}
        {% endif %}
    {% elseif listType == "tag_list" %}
        {% if isNameEmpty %}
            Tags
        {% else %}
            {{ config("Ceres.item.lists." ~ itemListId ~ "." ~ services.sessionStorage.getLang() ~ ".list_name") }}
        {% endif %}
    {% endif %}
</p>
